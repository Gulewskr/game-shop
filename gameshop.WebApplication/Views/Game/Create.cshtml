@model gameshop.WebApplication.Models.GameVM

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>GameVM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryID" class="control-label"></label>
                <div>
                    <select asp-for="CategoryID" class="form-control">
                        <option value="0">Choose Category</option>
                        @if (ViewBag.Categories != null) foreach (CategoryVM category in ViewBag.Categories)
                            {
                                <option value="@category.Id">@category.Name</option>
                            }
                    </select>
                </div>
                <span asp-validation-for="CategoryID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PublisherID" class="control-label"></label>
                <div>
                    <select asp-for="PublisherID" class="form-control">
                        <option value="0">Choose Publisher</option>
                        @if (ViewBag.Publishers != null) foreach (CompanyVM publisher in ViewBag.Publishers)
                            {
                                <option value="@publisher.Id">@publisher.Name</option>
                            }
                    </select>
                </div>
                <span asp-validation-for="PublisherID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeveloperID" class="control-label"></label>
                <div>
                    <select asp-for="DeveloperID" class="form-control">
                        <option value="0">Choose Developer</option>
                        @if (ViewBag.Developers != null) foreach (CompanyVM developer in ViewBag.Developers)
                            {
                                <option value="@developer.Id">@developer.Name</option>
                            }
                    </select>
                </div>
                <span asp-validation-for="DeveloperID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
