@model gameshop.WebApplication.Models.GameVM

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>GameVM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <!-- Image Form Begin -->
        <form>
            <div class="col-xs-12" style="padding: 10px;">
                <div class="col-xs-4">
                    <label>Upload</label>
                </div>
                <div class="col-xs-7">
                    <input type="file" id="image" name="file" multiple>
                </div>
            </div>
            <div class="col-xs-12" style="padding: 10px;">
                <div class="col-xs-4">
                    <input type="button" value="Upload" id="ajaxUploadButton" class="btn">
                </div>
                <div class="col-xs-7">

                </div>
            </div>
        </form>
        <div>
            <img id="img" src="" alt="uploaded image" />
        </div>

        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
        <script type="text/javascript">
            $(document).ready(function (e) {
                console.log("dodano");
                $("#ajaxUploadButton").click(function () {
                    var file = $('#image')[0].files;
                    var formData = new FormData();
                    formData.append("image", file[0]);
                    $.ajax({
                        url: "https://localhost:44355/Image/Create",
                        headers: {
                            "Access-Control-Allow-Origin": "*"
                        },
                        type: 'post',
                        data: formData,
                        contentType: false,
                        processData: false,
                        success: function (response) {
                            if (response != 0) {
                                $("#img").attr("src", "https://localhost:5001/" + response.replaceAll("\"", ""));
                                $("#img").attr("alt", "https://localhost:5001/" + response.replaceAll("\"", ""));
                                //imgUrlAct -- insert to form
                                $("#imgUrlAct").attr("value", "https://localhost:5001/" + response.replaceAll("\"", ""));
                            } else {
                                alert('file not uploaded');
                            }
                        },
                    });
                });
            });
        </script>
        <!-- Image Form End -->
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <!-- Image URL hidden -->
            <div class="form-group" hidden="hidden">
                <input asp-for="ImageURL" id="imgUrlAct" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryID" class="control-label"></label>
                <div>
                    <select asp-for="CategoryID" class="form-control">
                        <option value="0">Choose Category</option>
                        @if (ViewBag.Categories != null) foreach (CategoryVM category in ViewBag.Categories)
                            {
                                <option value="@category.Id">@category.Name</option>
                            }
                    </select>
                </div>
                <span asp-validation-for="CategoryID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PublisherID" class="control-label"></label>
                <div>
                    <select asp-for="PublisherID" class="form-control">
                        <option value="0">Choose Publisher</option>
                        @if (ViewBag.Publishers != null) foreach (CompanyVM publisher in ViewBag.Publishers)
                            {
                                <option value="@publisher.Id">@publisher.Name</option>
                            }
                    </select>
                </div>
                <span asp-validation-for="PublisherID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeveloperID" class="control-label"></label>
                <div>
                    <select asp-for="DeveloperID" class="form-control">
                        <option value="0">Choose Developer</option>
                        @if (ViewBag.Developers != null) foreach (CompanyVM developer in ViewBag.Developers)
                            {
                                <option value="@developer.Id">@developer.Name</option>
                            }
                    </select>
                </div>
                <span asp-validation-for="DeveloperID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
