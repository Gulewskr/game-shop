<div class="shopping-cart section">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <!-- Shopping Summery -->
                <table class="table shopping-summery">
                    <thead>
                        <tr class="main-hading">
                            <th>PRODUCT</th>
                            <th>NAME</th>
                            <th class="text-center">Platform</th>
                            <th class="text-center">Amount</th>
                            <th class="text-center"><i class="ti-trash remove-icon"></i></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (orders != null)
                        {
                            @foreach (OrderVM order in orders)
                            {
                                @await Html.PartialAsync("~/Views/Order/OrderRowTable.cshtml", order);
                            }
                        }
                    </tbody>
                </table>
                <!--/ End Shopping Summery -->
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <!-- Total Amount -->
        <div class="total-amount">
            <div class="row">
                <div class="col-lg-8 col-md-5 col-12"></div>
                <div class="col-lg-4 col-md-7 col-12">
                    <div class="right">
                        <ul>
                            <li>User <span>@Model.UserID</span></li>
                            <li>Created <span>@Model.CreateTime</span></li>
                            <li>Last Change <span>@Model.LastChange</span></li>
                        </ul>
                        <div class="button5">
                            <a href="#" class="btn">Checkout</a>
                            <a href="#" class="btn">Empty Cart</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--/ End Total Amount -->
    </div>
</div>
